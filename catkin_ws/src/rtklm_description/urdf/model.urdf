<?xml version="1.0"?>
<robot name="rtklawnmower">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://rtklm_description/models/chassis.stl"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rtklm_description/models/chassis.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="10" ixy="0" ixz="0" iyy="10" iyz="0" izz="10" />
    </inertial>
  </link>

  <link name="left_wheel_link">
    <visual>
      <geometry>
        <mesh filename="package://rtklm_description/models/wheel.stl"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rtklm_description/models/wheel.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>

  <link name="right_wheel_link">
    <visual>
      <geometry>
        <mesh filename="package://rtklm_description/models/wheel.stl"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rtklm_description/models/wheel.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>

  <joint name="base_to_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.08 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.08 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  <transmission name="transmission_base_to_left_wheel">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_to_left_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor_base_to_left_wheel"/>
  </transmission>
  
  <transmission name="transmission_base_to_right_wheel">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_to_right_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor_base_to_right_wheel"/>
  </transmission>
  
  <gazebo>
    <plugin filename="libgazebo_ros_control.so" name="gazebo_ros_control"/>
  </gazebo>

</robot>
